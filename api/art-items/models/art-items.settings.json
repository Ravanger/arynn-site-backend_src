{
  "kind": "collectionType",
  "collectionName": "art_items",
  "info": {
    "name": "Art Items",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "paintings",
        "comics",
        "digital_art",
        "design"
      ],
      "required": true
    },
    "shop_item": {
      "model": "shop-items"
    }
  }
}
